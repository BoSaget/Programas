#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <pthread.h>

void * funcion(void * argumento);

void main(int argc, char **argv){

    //Se Declara Hilo
    pthread_t hilos;
    char * saludo = "Hola Mundo";

    //Se solicita cantidad de hilos
    if(argc != 2)
    {
        printf("No ha introducido el n√∫mero de hilos a crear \n");
        exit(0);
    }

    //Se obtiene cantidad de hilos a usar
    int numero_hilos = atoi(argv[1]);

    for(int i = 0; i <numero_hilos; i++)
    {
        //Se crea el hilo
        pthread_create(&hilos, NULL, funcion, saludo);
    }
    
    printf("Fin \n");
}

void * funcion (void * cadena)
{
    printf("Soy, el hilo dice: %s \n", cadena);

    return NULL;
}
